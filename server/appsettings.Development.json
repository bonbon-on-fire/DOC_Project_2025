{
  "Urls": "http://localhost:5130",
  "Logging": {
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "IncludeScopes": false,
        "UseUtcTimestamp": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss.fff 'UTC' "
      }
    },
    "File": {
      "Path": "logs/server/app-dev.jsonl",
      "JsonFormatter": {
        "UseUtcTimestamp": true,
        "IncludeScopes": true,
        "IncludeEventId": true,
        "IncludeCategory": true,
        "IncludeLogLevel": true
      }
    },
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "AIChat.Server": "Debug"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=aichat_dev.db"
  }
}
