{
  "Urls": "http://localhost:5099",
  "LlmCache": {
    "EnableCaching": false
  },
  "Logging": {
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "IncludeScopes": false,
        "UseUtcTimestamp": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss.fff 'UTC' "
      }
    },
    "File": {
      "Path": "logs/server/app-test.jsonl",
      "JsonFormatter": {
        "UseUtcTimestamp": true,
        "IncludeScopes": true,
        "IncludeEventId": true,
        "IncludeCategory": true,
        "IncludeLogLevel": true
      }
    }
  }
}
